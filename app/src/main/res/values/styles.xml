<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Parent Button Style -->
    <style name="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Number Button -->
    <style name="NumberButton" parent="BaseButton">
        <item name="android:background">@drawable/rect_button2</item>
    </style>

    <!-- Operator Button -->
    <style name="OperatorButton" parent="BaseButton">
         <item name="android:background">@drawable/rect_button</item>
    </style>

    <!-- Equal Button -->
    <style name="EqualButton" parent="BaseButton" >
        <item name="android:background">@drawable/rect_button</item>
    </style>
</resources>
